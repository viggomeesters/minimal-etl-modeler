{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    
    /* Modules */
    "module": "None",
    
    /* Emit */
    "outDir": "./",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking - Incremental Migration Settings */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true,
    "checkJs": false,
    
    /* Skip Lib Check */
    "skipLibCheck": true
  },
  "include": [
    "app.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.mjs",
    "test-*.ts"
  ]
}
